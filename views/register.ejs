<% include partials/header %>

<div class="container" style= "margin-top: 20px;">
        <h1 class="text-center">Sign up</h1>
        <div style= "width: 50%; margin: 30px auto;">
                <form action="/register" method="POST">
                <div class="form-group">
                    <label for="username">Username: </label>
                    <input class="form-control" type="text" id="username" name="username" placeholder="johndoe"></input>
                </div>
                <div class="form-group">
                    <label for="firstName">First Name: </label>
                    <input class="form-control" type="text" id="firstName" name="firstName" placeholder="John"></input>
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name: </label>
                    <input class="form-control" id="lastName" type="text" name="lastName" placeholder="Doe"></input>
                </div>
                <div class="form-group">
                    <label for="email">Email: </label>
                    <input class="form-control" id="email" type="email" name="email" placeholder="johndoe@email.com"></input>
                </div>
                <div class="form-group">
                    <label for="password">Password: </label>
                    <input class="form-control" id="password" type="password" name="password" placeholder="password"></input>
                </div>
                <div class="form-group">
                    <label for="adminCode">Admin Code: </label>
                    <input class="form-control" id="adminCode" type="password" name="adminCode">
                </div>
                <div class="form-group">

                    <button class="btn btn-outline-success btn-block">Submit</button>
                </div>
            </form>
            <a href="/castles">Return</a>
        </div>	
    </div>


<% include partials/footer %>