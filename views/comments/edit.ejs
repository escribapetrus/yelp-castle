<% include ../partials/header %>
<div class="container" style= "margin-top: 20px;">
	<h1 class="text-center">Edit your comment</h1>
		<div style= "width: 50%; margin: 30px auto;">
			<form action="/castles/<%= castle_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>"></input>
				</div>
				<div class="form-group">
					<button class="btn btn-outline-success btn-block">Submit</button>
				</div>
			</form>
			<a href="/castles/<%= castle_id %>">Return</a>
		</div>
	
</div>
<% include ../partials/footer %>