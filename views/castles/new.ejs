<% include ../partials/header %>

<div class="container" style= "margin-top: 20px;">
	<h1 class="text-center">Add a new castle</h1>
	<div style= "width: 50%; margin: 30px auto;">
		<form action="/castles" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="name" placeholder="castle name"></input>
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="description" placeholder="description"></input>
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="image" placeholder="image url"></input>
			</div>
			<div class="form-group">
				<button class="btn btn-outline-success btn-block">Submit</button>
			</div>
		</form>
		<a href="/castles">Return</a>
	</div>	
</div>
<% include ../partials/footer %>