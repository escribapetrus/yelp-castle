<% include ../partials/header %>

<div class="container" style= "margin-top: 20px;">
	<h1 class="text-center">Edit <%= castle.name %></h1>
	<div style= "width: 50%; margin: 30px auto;">
		<form action="/castles/<%= castle._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="castle[name]" value="<%= castle.name %>"></input>
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="castle[year]" placeholder="<%= castle.year %>"></input>
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="castle[description]" value="<%= castle.description %>"></input>
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="castle[image]" value="<%= castle.image %>"></input>
			</div>
			<div class="form-group">
				<button class="btn btn-outline-success btn-block">Submit</button>
			</div>
		</form>
		<a href="/castles">Return</a>
	</div>	
</div> 


<% include ../partials/footer %>